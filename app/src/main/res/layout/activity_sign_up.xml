<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SignUpActivity"
    android:background="@color/backfround_black">

    <ImageView
        android:id="@+id/imv_logo"
        android:layout_width="303dp"
        android:layout_height="100dp"
        android:layout_marginTop="65dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_carro_de_la_compra" />

    <TextView
        android:id="@+id/tv_tittle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/roboto"
        android:text="Ato"
        android:textColor="@color/primary_green"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/imv_logo"
        app:layout_constraintTop_toBottomOf="@+id/imv_logo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="90dp"
        android:fontFamily="@font/roboto"
        android:text="Store"
        android:textColor="@color/secondary_grey"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imv_logo"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_tittle1"
        app:layout_constraintTop_toBottomOf="@+id/imv_logo" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto"
        android:text="Nombre:"
        android:textColor="@color/secondary_grey"
        app:layout_constraintStart_toStartOf="@+id/imv_logo"
        app:layout_constraintTop_toBottomOf="@+id/tv_tittle1" />

    <EditText
        android:id="@+id/edt_nombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:inputType="textPersonName"
        android:backgroundTint="@color/secondary_dark_grey"
        android:textColor="@color/secondary_grey"
        android:textColorHint="@color/secondary_grey"
        android:textColorLink="@color/secondary_grey"
        app:layout_constraintEnd_toEndOf="@+id/imv_logo"
        app:layout_constraintStart_toStartOf="@+id/imv_logo"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <TextView
        android:id="@+id/tv_ape_pat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto"
        android:text="Apellido Paterno:"
        android:textColor="@color/secondary_grey"
        app:layout_constraintStart_toStartOf="@+id/edt_nombre"
        app:layout_constraintTop_toBottomOf="@+id/edt_nombre" />

    <TextView
        android:id="@+id/tv_ape_mat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto"
        android:text="Apellido Materno:"
        android:textColor="@color/secondary_grey"
        app:layout_constraintStart_toEndOf="@+id/tv_ape_pat"
        app:layout_constraintTop_toBottomOf="@+id/edt_nombre" />

    <EditText
        android:id="@+id/edt_ape_pat"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/secondary_dark_grey"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:inputType="textPersonName"
        android:textColor="@color/secondary_grey"
        android:textColorHint="@color/secondary_grey"
        android:textColorLink="@color/secondary_grey"
        app:layout_constraintStart_toStartOf="@+id/tv_ape_pat"
        app:layout_constraintTop_toBottomOf="@+id/tv_ape_pat" />

    <EditText
        android:id="@+id/edt_ape_mat"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/secondary_dark_grey"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:inputType="textPersonName"
        android:textColor="@color/secondary_grey"
        android:textColorHint="@color/secondary_grey"
        android:textColorLink="@color/secondary_grey"
        app:layout_constraintEnd_toEndOf="@+id/edt_nombre"
        app:layout_constraintTop_toBottomOf="@+id/tv_ape_mat" />

    <TextView
        android:id="@+id/tv_telefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto"
        android:text="Teléfono:"
        android:textColor="@color/secondary_grey"
        app:layout_constraintStart_toStartOf="@+id/edt_ape_pat"
        app:layout_constraintTop_toBottomOf="@+id/edt_ape_pat" />

    <EditText
        android:id="@+id/edt_telefono"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/secondary_dark_grey"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:inputType="phone"
        android:textColor="@color/secondary_grey"
        android:textColorHint="@color/secondary_grey"
        android:textColorLink="@color/secondary_grey"
        app:layout_constraintEnd_toEndOf="@+id/edt_ape_mat"
        app:layout_constraintStart_toStartOf="@+id/tv_telefono"
        app:layout_constraintTop_toBottomOf="@+id/tv_telefono" />

    <TextView
        android:id="@+id/tv_email_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto"
        android:text="Correo electónico:"
        android:textColor="@color/secondary_grey"
        app:layout_constraintStart_toStartOf="@+id/edt_telefono"
        app:layout_constraintTop_toBottomOf="@+id/edt_telefono" />

    <EditText
        android:id="@+id/edt_email_signup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/secondary_dark_grey"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:inputType="textEmailAddress"
        android:textColor="@color/secondary_grey"
        android:textColorHint="@color/secondary_grey"
        android:textColorLink="@color/secondary_grey"
        app:layout_constraintEnd_toEndOf="@+id/edt_telefono"
        app:layout_constraintStart_toStartOf="@+id/tv_email_signup"
        app:layout_constraintTop_toBottomOf="@+id/tv_email_signup" />

    <TextView
        android:id="@+id/tv_password_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto"
        android:text="Contraseña:"
        android:textColor="@color/secondary_grey"
        app:layout_constraintStart_toStartOf="@+id/edt_email_signup"
        app:layout_constraintTop_toBottomOf="@+id/edt_email_signup" />

    <EditText
        android:id="@+id/edt_password_signup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/secondary_dark_grey"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:inputType="textPassword"
        android:textColor="@color/secondary_grey"
        android:textColorHint="@color/secondary_grey"
        android:textColorLink="@color/secondary_grey"
        app:layout_constraintEnd_toEndOf="@+id/edt_email_signup"
        app:layout_constraintStart_toStartOf="@+id/tv_password_signup"
        app:layout_constraintTop_toBottomOf="@+id/tv_password_signup" />

    <TextView
        android:id="@+id/tv_nombre_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto"
        android:text="Nombre de la Tienda:"
        android:textColor="@color/secondary_grey"
        app:layout_constraintStart_toStartOf="@+id/edt_password_signup"
        app:layout_constraintTop_toBottomOf="@+id/edt_password_signup" />

    <EditText
        android:id="@+id/edt_nombre_store"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/secondary_dark_grey"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:inputType="textPersonName"
        android:textColor="@color/secondary_grey"
        android:textColorHint="@color/secondary_grey"
        android:textColorLink="@color/secondary_grey"
        app:layout_constraintEnd_toEndOf="@+id/edt_password_signup"
        app:layout_constraintStart_toStartOf="@+id/tv_nombre_store"
        app:layout_constraintTop_toBottomOf="@+id/tv_nombre_store" />

    <TextView
        android:id="@+id/tv_calle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto"
        android:text="Calle:"
        android:textColor="@color/secondary_grey"
        app:layout_constraintStart_toStartOf="@+id/edt_nombre_store"
        app:layout_constraintTop_toBottomOf="@+id/edt_nombre_store" />

    <EditText
        android:id="@+id/edt_calle"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:inputType="textPersonName"
        android:backgroundTint="@color/secondary_dark_grey"
        android:textColor="@color/secondary_grey"
        android:textColorHint="@color/secondary_grey"
        android:textColorLink="@color/secondary_grey"
        app:layout_constraintStart_toStartOf="@+id/tv_calle"
        app:layout_constraintTop_toBottomOf="@+id/tv_calle" />

    <TextView
        android:id="@+id/tv_numero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto"
        android:text="Número:"
        android:textColor="@color/secondary_grey"
        app:layout_constraintStart_toEndOf="@+id/tv_calle"
        app:layout_constraintTop_toBottomOf="@+id/edt_nombre_store" />

    <EditText
        android:id="@+id/edt_numero"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="numberSigned"
        android:backgroundTint="@color/secondary_dark_grey"
        android:textColor="@color/secondary_grey"
        android:textColorHint="@color/secondary_grey"
        android:textColorLink="@color/secondary_grey"
        app:layout_constraintEnd_toEndOf="@+id/edt_nombre_store"
        app:layout_constraintTop_toBottomOf="@+id/tv_numero" />

    <TextView
        android:id="@+id/tv_colonia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto"
        android:text="Colonia:"
        android:textColor="@color/secondary_grey"
        app:layout_constraintStart_toStartOf="@+id/edt_calle"
        app:layout_constraintTop_toBottomOf="@+id/edt_calle" />

    <EditText
        android:id="@+id/edt_colonia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:inputType="textPersonName"
        android:backgroundTint="@color/secondary_dark_grey"
        android:textColor="@color/secondary_grey"
        android:textColorHint="@color/secondary_grey"
        android:textColorLink="@color/secondary_grey"
        app:layout_constraintEnd_toEndOf="@+id/edt_numero"
        app:layout_constraintStart_toStartOf="@+id/tv_colonia"
        app:layout_constraintTop_toBottomOf="@+id/tv_colonia" />


</androidx.constraintlayout.widget.ConstraintLayout>